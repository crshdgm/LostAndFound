<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginBottom="16dp"
    android:background="@android:color/white"
    android:elevation="4dp">

    <!-- Request Number -->
    <TextView
        android:id="@+id/tvRequestNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request #: 123"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"/>

    <!-- Owner Name -->
    <TextView
        android:id="@+id/tvOwnerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Owner: Jane Doe"
        android:layout_marginBottom="4dp"/>

    <!-- School ID -->
    <TextView
        android:id="@+id/tvSchoolId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="School ID: 220000"
        android:layout_marginBottom="4dp"/>

    <!-- Date Found -->
    <TextView
        android:id="@+id/tvDateFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Found: 05-10-2025"
        android:layout_marginBottom="8dp"/>

    <!-- Description -->
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description: Blue iPhone"
        android:layout_marginBottom="8dp"/>

    <!-- Only Claim & Delete -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnClaim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Claim"
            android:enabled="false"/>

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"/>
    </LinearLayout>
</LinearLayout>
